# Server Configuration
PORT=4100

# MongoDB Atlas Connection
DB_URL=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/database?retryWrites=true&w=majority&appName=Cluster0
DB_NAME=auth_dev_shared
DB_NAME_TEST=auth_test

# JWT Secret (minimum 32 characters in production)
ACCESS_TOKEN_SECRET=change-me-to-something-secure-minimum-32-characters

# Frontend Origin (for CORS)
CLIENT_URL=http://localhost:5173

# Environment
NODE_ENV=development

# Data Retention (in days)
RETENTION_INACTIVE_USERS_DAYS=1095
RETENTION_DELETED_USERS_DAYS=30
RETENTION_CONSENT_DAYS=2555
RETENTION_SECURITY_DAYS=1095

# Domain Backend (Forum Service)
DOMAIN_BACKEND_URL=http://localhost:4200